{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    {% block nav %}
        {% include 'admin/_menu.admin.html.twig' %}
        {% endblock %}

    <h1 class=" mt-5 mb-5 text-center text-dark border-bottom pb-3">{{ title }}</h1>


    <div class="text-center mb-5">
    <a href="{{ path('app_admin_article_new') }}" class="btn btn-outline-success ">
        Ajouter un  article
    </a>
    </div>
    <table class="table w-75 mx-auto">
        <thead style="background-color: #244252;">
            <tr class="text-center" style="color: whitesmoke">
                <th>Id</th>
                <th>User_id</th>
                <th>Title</th>
                <th>Title_slug</th>
                <th>Text</th>
                <th>Article_date_create</th>
                <th>Article_date_posted</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr class="text-center">
                <td>{{ article.id }}</td>
                <td>{{ article.userId }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.titleSlug }}</td>
                <td>{{ article.text | slice(0, 300) }}{% if article.text|length > 300 %}...{% endif %}</td>
                <td>{{ article.articleDateCreate ? article.articleDateCreate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.articleDatePosted ? article.articleDatePosted|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
                <td class="text-center">
                    <a href="{{ path('app_admin_article_show', {'id': article.id}) }}" class="btn btn-outline-info mt-4">Voir</a>

                    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-outline-warning mt-4">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_article_new') }}">Create new</a>
{% endblock %}
